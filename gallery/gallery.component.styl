select-indicator-size = 10px
select-indicator-bg = #fff
select-indicator-border = #ff4500

unselected() {
  background select-indicator-bg
  border-color select-indicator-border

}

selected() {
  background select-indicator-border
  border-color select-indicator-bg
}

.mg-gallery
  width 100%
  height 100%
  display block
  cursor pointer
  overflow auto

  > mg-img
    height 133px
    width 200px
    display block
    float left
    margin 5px

    &.selectable
      position relative

      &:hover
        &:before
          visibility visible
      
      &:before
        unselected()
        content ''
        visibility hidden
        display block
        width: select-indicator-size
        height select-indicator-size
        border-radius 50%
        border 1px solid 
        position absolute
        right 5px   
        top 5px

      &.selected
        &:before
          selected()
          visibility visible
          
.mg-gallery-drag
  background #fafafa
  background-size: 30px 30px;
  background-image: linear-gradient(45deg, rgba(230, 230, 230, 0.1) 25%, transparent 25%, transparent 50%, rgba(230, 230, 230, 0.1) 50%, rgba(230, 230, 230, 0.1) 75%, transparent 75%, transparent);
  animation: barberpole 0.5s linear infinite;

@keyframes barberpole {
  from {
    background-position: 0 0;
  }
  to {
    background-position: 60px 30px;
  }
}
