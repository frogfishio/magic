.loader
  width 100%
  height 100%
  // background red

  .spacer
    display block
    width 100%
    // background yellow
    height calc(50% - 40px)

.loader-center
  height 100%

.mg-loader
  display block
  position relative
  width 80px
  height 80px
  margin auto

.mg-loader div
  display inline-block
  position absolute
  left 8px
  width 16px
  background #1C81DB
  // opacity .1
  animation mg-loader 1.2s cubic-bezier(0, .5, .5, 1) infinite

.mg-loader div:nth-child(1)
  left 8px
  animation-delay -.24s

.mg-loader div:nth-child(2)
  left 32px
  animation-delay -.12s

.mg-loader div:nth-child(3)
  left 56px
  animation-delay 0

@keyframes mg-loader
  0%
    top 8px
    height 64px

  50%, 100%
    top 24px
    height 32px
